<div class="container">
  <h1>Restaurants#new</h1>
  <p>Find me in app/views/restaurants/new.html.erb</p>

  <%= simple_form_for [@restaurant] do |f| %>

    <%= f.input :name, :label => 'Restaurants name' %>
    <%= f.input :address, :hint => 'No special characters.' %>
    <%= f.input :phone_number, :placeholder => 'Type your phone number here' %>
    <%= f.input :category, :hint => 'Choose one of the following: "chinese", "italian", "japanese", "french", "belgian"' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
